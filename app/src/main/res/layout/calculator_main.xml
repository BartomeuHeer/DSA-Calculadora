<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CalculatorMainActivity">

    <Button
            android:text="1"
            android:layout_width="71dp"
            android:layout_height="55dp" android:id="@+id/btn1"
            android:layout_marginTop="41dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" android:onClick="btn1Click"/>
    <Button
            android:text="2"
            android:layout_width="71dp"
            android:layout_height="55dp" android:id="@+id/btn2"
            android:layout_marginTop="41dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginStart="35dp"
            app:layout_constraintStart_toEndOf="@+id/btn1" android:onClick="btn2Click"/>
    <Button
            android:text="4"
            android:layout_width="71dp"
            android:layout_height="55dp" android:id="@+id/btn4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"
            android:layout_marginTop="23dp" app:layout_constraintTop_toBottomOf="@+id/btn1"
            android:onClick="btn4Click"/>
    <Button
            android:text="5"
            android:layout_width="71dp"
            android:layout_height="55dp" android:id="@+id/btn5"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/btn2" android:layout_marginStart="35dp"
            app:layout_constraintStart_toEndOf="@+id/btn4" android:onClick="btn5Click"/>
    <Button
            android:text="6"
            android:layout_width="71dp"
            android:layout_height="55dp" android:id="@+id/btn6"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/btn3" android:layout_marginStart="38dp"
            app:layout_constraintStart_toEndOf="@+id/btn5" android:layout_marginEnd="81dp"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="btn6Click"/>
    <Button
            android:text="7"
            android:layout_width="71dp"
            android:layout_height="55dp" android:id="@+id/btn7"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"
            android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/btn4"
            android:onClick="btn7Click"/>
    <Button
            android:text="8"
            android:layout_width="71dp"
            android:layout_height="55dp" android:id="@+id/btn8"
            android:layout_marginStart="35dp" app:layout_constraintStart_toEndOf="@+id/btn7"
            android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/btn5"
            android:onClick="btn8Click"/>
    <Button
            android:text="9"
            android:layout_width="71dp"
            android:layout_height="55dp" android:id="@+id/btn9"
            android:layout_marginStart="38dp" app:layout_constraintStart_toEndOf="@+id/btn8"
            android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/btn6"
            android:layout_marginEnd="81dp" app:layout_constraintEnd_toEndOf="parent" android:onClick="btn9Click"/>
    <Button
            android:text="0"
            android:layout_width="71dp"
            android:layout_height="55dp" android:id="@+id/btn0"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"
            android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/btn7"
            app:layout_constraintEnd_toStartOf="@+id/btnSum" android:layout_marginEnd="35dp"
            android:onClick="btn0Click"/>
    <Button
            android:text="+"
            android:layout_width="71dp"
            android:layout_height="55dp" android:id="@+id/btnSum"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn8" app:layout_constraintEnd_toStartOf="@+id/btnSub"
            android:layout_marginEnd="28dp" android:onClick="btnSumClick"/>
    <Button
            android:text="-"
            android:layout_width="71dp"
            android:layout_height="55dp" android:id="@+id/btnSub"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn9" android:layout_marginEnd="72dp"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="btnSubClick"/>
    <Button
            android:text="x"
            android:layout_width="71dp"
            android:layout_height="55dp" android:id="@+id/btnProd"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/btn0" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp"
            android:onClick="btnProdClick"/>
    <Button
            android:text="/"
            android:layout_width="71dp"
            android:layout_height="55dp" android:id="@+id/btnDiv"
            android:layout_marginStart="32dp" app:layout_constraintStart_toEndOf="@+id/btnProd"
            android:layout_marginTop="22dp" app:layout_constraintTop_toBottomOf="@+id/btnSum"
            android:onClick="btnDivClick"/>
    <Button
            android:text="="
            android:layout_width="71dp"
            android:layout_height="55dp" android:id="@+id/btnRes"
            android:layout_marginStart="38dp" app:layout_constraintStart_toEndOf="@+id/btnDiv"
            android:layout_marginTop="22dp" app:layout_constraintTop_toBottomOf="@+id/btnSub"
            android:layout_marginEnd="81dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            android:onClick="btnResClick"/>
    <Button
            android:text="3"
            android:layout_width="71dp"
            android:layout_height="55dp" android:id="@+id/btn3"
            android:layout_marginTop="41dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginStart="38dp"
            app:layout_constraintStart_toEndOf="@+id/btn2" android:layout_marginEnd="81dp"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="btn3Click"/>
    <TextView
            android:layout_width="275dp"
            android:layout_height="69dp" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="85dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="49dp" android:layout_marginEnd="87dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>